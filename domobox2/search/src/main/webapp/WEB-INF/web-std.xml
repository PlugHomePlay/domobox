<?xml version =	'1.0' encoding = 'ISO-8859-1'?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee
        http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd" version="2.4">
    <context-param>
        <param-name>db.source</param-name>
        <param-value>java:/comp/env/jdbc/DataSource</param-value>
    </context-param>
    <context-param>
        <param-name>db.classname</param-name>
        <param-value>kasperimpl.database.ext.oracle.OracleDataBase</param-value>
    </context-param>
    <context-param>
  	 	<param-name>dtDefinitionsClassName</param-name>
        <param-value>louvre.boag.domain.DtDefinitions</param-value>
    </context-param>
    <context-param>
        <param-name>applicationConfiguration</param-name>
        <param-value>/META-INF/managers.xml</param-value>
    </context-param>
    <context-param>
        <param-name>kpr</param-name>
        <param-value>/fr/klee/demo/execution.kpr</param-value>
    </context-param>
    <context-param>
        <param-name>default.charset</param-name>
        <param-value>iso-8859-1</param-value>
    </context-param>
    <filter>
        <filter-name>compressor</filter-name>
        <filter-class>kasperx.commons.filter.CompressionFilter</filter-class>
        <init-param>
            <param-name>compressionThreshold</param-name>
            <param-value>8192</param-value>
        </init-param>
    </filter>
    <filter>
        <filter-name>client-no-cache</filter-name>
        <filter-class>kasperx.commons.filter.CacheControlFilter</filter-class>
        <init-param>
            <param-name>Cache-Control</param-name>
            <param-value>no-cache</param-value>
        </init-param>
        <init-param>
            <param-name>Pragma</param-name>
            <param-value>no-cache</param-value>
        </init-param>
        <init-param>
            <param-name>Expires</param-name>
            <param-value>-1</param-value>
        </init-param>
        <init-param>
            <param-name>url-exclude-pattern</param-name>
            <param-value>/servlet/download</param-value>
        </init-param>
    </filter>
    <filter>
        <filter-name>client-24h-cache</filter-name>
        <filter-class>kasperx.commons.filter.CacheControlFilter</filter-class>
        <init-param>
            <param-name>Cache-Control</param-name>
            <param-value>max-age=86400, public</param-value>
        </init-param>
    </filter>
    <filter>
        <filter-name>kasper-counter</filter-name>
        <filter-class>kasperx.commons.ui.filter.UIFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>client-no-cache</filter-name>
        <url-pattern>/servlet/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>client-24h-cache</filter-name>
        <url-pattern>/static/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>kasper-counter</filter-name>
        <url-pattern>/servlet/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>kasper-counter</filter-name>
        <url-pattern>/static/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>compressor</filter-name>
        <url-pattern>/servlet/*</url-pattern>
    </filter-mapping>

    <listener>
        <listener-class>kasperimpl.uihandler.session.SessionListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>Servlet</servlet-name>
        <servlet-class>louvre.boag.boot.ApplicationServlet</servlet-class>
        <!-- Load this servlet at server startup time -->

        <!-- Numéro de version de l'application -->
        <init-param>
            <param-name>demo.version</param-name>
            <param-value>5.2.1</param-value>
        </init-param>

        <!-- Activation/Désactivation de l'affichage des messages de confirmation lors d'un clic sur un item de menu -->
        <init-param>
            <param-name>menu.confirmMessage.activate</param-name>
            <param-value>false</param-value>
        </init-param>

        <!-- Nombre par défaut de lignes par page dans les tableaux -->
        <init-param>
            <param-name>jsp.defaultNbRowsPerPage</param-name>
            <param-value>10</param-value>
        </init-param>

        <!-- Nombre maximale de lignes retournées par une recherche en base de données -->
        <init-param>
            <param-name>search.maxRows</param-name>
            <param-value>200</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>Servlet</servlet-name>
        <url-pattern>/servlet/*</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>60</session-timeout>
    </session-config>

    <mime-mapping>
        <extension>html</extension>
        <mime-type>text/html</mime-type>
    </mime-mapping>
    <mime-mapping>
        <extension>txt</extension>
        <mime-type>text/plain</mime-type>
    </mime-mapping>
    <mime-mapping>
        <extension>css</extension>
        <mime-type>text/css</mime-type>
    </mime-mapping>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/jsp/application-error.jsp</location>
    </error-page>

    <jsp-config>
        <taglib>
            <taglib-uri>/kasper_demo</taglib-uri>
            <taglib-location>/WEB-INF/kasper_demo.tld</taglib-location>
        </taglib>
    </jsp-config>
    <resource-ref>
        <description>
			Resource reference to a factory for java.sql.Connection
			instances that may be used for talking to a particular
			database that is configured in the server.xml file.
		</description>
        <res-ref-name>jdbc/DataSource</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
</web-app>
